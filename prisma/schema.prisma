datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum TodoStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

model Todo {
  id        Int        @id @default(autoincrement())
  title     String
  content   String
  status    TodoStatus @default(NOT_STARTED)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}
